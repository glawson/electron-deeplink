{
    "name": "electron-deeplink",
    "version": "0.0.0-development",
    "description": "Node module for Electron apps that sets the default handler for a given protocol (deeplinks) in both development and production environments.",
    "keywords": [
        "electron",
        "deeplink",
        "protocol",
        "win32",
        "macos"
    ],
    "main": "./dist/index.js",
    "files": [
        "/dist",
        "/src",
        "binding.gyp",
        "package.json",
        "README.md"
    ],
    "scripts": {
        "build": "tsc & node-gyp rebuild",
        "clean": "rm -rf ./dist & node-gyp clean",
        "format": "clang-format -i ./src/electron-deeplink.mm",
        "test": "nyc mocha -r ts-node/register ./tests/**/*.spec.ts",
        "semantic-release": "semantic-release"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/bindings": "^1.5.1",
        "@types/chai": "^4.2.22",
        "@types/mocha": "^8.0.2",
        "@types/node": "^14.0.27",
        "@types/sinon": "^10.0.4",
        "chai": "^4.2.0",
        "clang-format": "^1.4.0",
        "mocha": "^8.1.1",
        "nyc": "^15.1.0",
        "prettier": "^2.0.5",
        "semantic-release": "^22.0.7",
        "sinon": "^9.0.2",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7"
    },
    "dependencies": {
        "@types/electron": "^1.6.10",
        "bindings": "^1.5.0",
        "electron": "^27.0.4",
        "electron-log": "^4.2.3",
        "node-addon-api": "^2.0.0",
        "node-gyp": "^10.0.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/glawson/electron-deeplink.git"
    },
    "release": {
        "branches": [
            "master"
        ]
    }
